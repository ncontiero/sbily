{
  "name": "sbily",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "description": "A Django project for a link shortener.",
  "author": "Nicolas Contiero <https://github.com/ncontiero>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production rspack build -c rspack/prod.config.ts",
    "build:email": "pnpm --filter=@sbily/emails run export",
    "dev": "cross-env NODE_ENV=development rspack serve -c rspack/dev.config.ts",
    "dev:email": "pnpm --filter=@sbily/emails run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@stripe/stripe-js": "^8.6.4",
    "chart.js": "^4.5.1",
    "chartjs-chart-geo": "^4.3.6",
    "culori": "^4.0.2",
    "lucide": "^0.563.0"
  },
  "devDependencies": {
    "@ncontiero/eslint-config": "^7.0.0",
    "@rspack/cli": "^1.7.4",
    "@rspack/core": "^1.7.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/culori": "^4.0.1",
    "@types/node": "^25.0.10",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "tailwindcss": "4.1.18",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "webpack-bundle-tracker": "^3.2.3",
    "webpack-merge": "^6.0.1"
  },
  "engines": {
    "node": ">=20"
  }
}
